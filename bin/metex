#!/usr/bin/env python
import logging
import argparse

from metex.core import Texture



parser = argparse.ArgumentParser(description="Generate maximum entropy textures")

parser.add_argument('L', metavar='L', type=int, help='Texture size')
parser.add_argument('--log', type=str, help='Logging level', default='info',
                    choices=['debug', 'info', 'warning', 'error', 'critical'])

args = parser.parse_args()


# set up logging level according to that specified by the program
# arguments
numeric_loglevel = getattr(logging, args.log.upper(), None)
logging.basicConfig(level=numeric_loglevel, format='%(asctime)s:%(levelname)s: %(message)s')


t = Texture(L=args.L, gamma=0.5)
print(t.sample())
